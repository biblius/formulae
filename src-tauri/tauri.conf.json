{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "formulae",
  "version": "0.1.10",
  "identifier": "com.biblius.formulae",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "formulae",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:formulae.db"]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgwRUYxREREN0Q4ODVENEQKUldSTlhZaDkzUjN2Z0lORjV0YWgyRDRsN3haSnVLWWg4Uk1kay9rcE9rcS9NQjVVN3FVV3hENWQK",
      "endpoints": ["https://github.com/biblius/formulae/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
